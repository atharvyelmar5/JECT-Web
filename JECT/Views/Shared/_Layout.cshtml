<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QR Attendance</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f4f6f9;
            font-family: "Segoe UI", Arial, sans-serif;
            color: #1f2937;
        }

        .navbar {
            background-color: #1e3a8a;
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #ffffff !important;
            font-weight: 500;
        }

        .navbar-nav .nav-link:hover {
            text-decoration: underline;
        }

        .content-wrapper {
            min-height: calc(100vh - 56px);
            padding: 20px;
        }

        footer {
            background-color: #e5e7eb;
            text-align: center;
            padding: 10px;
            font-size: 13px;
            color: #374151;
        }
    </style>
</head>

<body>

    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">QR Attendance System</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/TeacherLogin">Teacher</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/StudentLogin">Student</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <div class="content-wrapper container">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        © @DateTime.Now.Year | QR Code Attendance System | Academic Project
    </footer>

</body>
</html>
